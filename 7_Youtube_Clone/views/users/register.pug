extends ../layout

block content
  main(class="form-signin text-center flex").bg-dark.mt-5
    form(action="/users/register" method="POST")
      h1.text-light Register
      br
      h1(class="h3 mb-3 fw-normal text-light") Create your account
      div(class="form-floating")
        input(type="text" class="form-control" name="name" id="name" placeholder="name@example.com")
        label(for="name") Username   
      div(class="form-floating")
        input(type="email" class="form-control" name="email" id="email" placeholder="name@example.com")
        label(for="email") Email address
      div(class="form-floating")
        input(type="password" class="form-control" name="password" id="password" placeholder="Password")
        label(for="password") Password
      div(class="form-floating")
        input(type="password" class="form-control" name="passwordCheck" id="passwordCheck" placeholder="Password")
        label(for="passwordCheck") Repeat password
      br
      button(class="w-100 btn btn-lg btn-warning" type="submit") Register
      a(href="/")
        button.btn.btn-lg.w-100.btn-outline-light.me-2(type='button') Back to main page
    if(msg)
      br
      p.text-light #{msg}